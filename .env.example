# Environment Variables for DP Stock Investment Assistant
# Copy this file to .env and fill in your actual values

# Model selection
#MODEL_PROVIDER=openai
MODEL_PROVIDER=grok
MODEL_NAME=gpt-5-nano
MODEL_TEMPERATURE=0.3
MODEL_MAX_TOKENS=2000


MODEL_ALLOW_FALLBACK=true
MODEL_FALLBACK_ORDER=openai,grok
#MODEL_FALLBACK_ORDER=grok,openai
MODEL_DEBUG_PROMPT=true

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-5-nano
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Grok (xAI) placeholder configuration
GROK_API_KEY=your-grok-api-key-here
GROK_MODEL=grok-beta

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key-here
ALPHA_VANTAGE_ENABLED=false
YAHOO_FINANCE_ENABLED=true

# Application Settings
APP_LOG_LEVEL=INFO
APP_CACHE_ENABLED=true
APP_MAX_HISTORY=100

# Analysis Settings
ANALYSIS_DEFAULT_PERIOD=1y
ANALYSIS_DEFAULT_INTERVAL=1d

# Export Settings
EXPORT_DEFAULT_FORMAT=pdf
EXPORT_OUTPUT_DIRECTORY=reports
EXPORT_INCLUDE_CHARTS=true

# MongoDB Configuration
MONGODB_URI=mongodb://username:password@hostname:port/stock_assistant?retryWrites=true&w=majority
MONGODB_DB_NAME=stock_assistant
# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password  # Optional
REDIS_SSL=false